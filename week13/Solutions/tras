#!/bin/bash
# Позиционните ни параметри са: $1 = b1, $2 = b2; $3 = b3 => $5 ни е празна
if test –z $5 # проверката е вярна (-z проверява за празен низ)
	then echo $1 # принтираме съдържанието на $1
	for var # loop-ваме през списъка от позиционни параметри 
	do echo $var >> fniz # ако файла не е празен съдържанието се append-ва в края
	done 
else 
	echo $2 
	while true 
	do echo LOOP 
	break 
	done 
fi 
cat fniz # принтираме съдържанието на файла
read string # по условие прочитаме b2
until cat fniz | grep $string 
# тъй като горе сме записали b2 във файла условието е вярно (изходния код е 0) и тъй като until се изпълнява, докато условието
# е грешно то ние няма да влезем в тялото на цикъла, НО!!! на стандартния изход ще се принтира output-a на командата в условието
	do 
	set $2 b1 
	echo `grep $2 fniz ` 
	echo END 
	exit 
done 
set $3 $1 1 
# тук променямае съдържанието на променливите $1 $2 ... 
# $1 става със съдържание b3
# $2 става със съдържание b3
# $3 става със съдържание 1, останалите са празни
echo OK $3 # принтира се ОК 1
echo `grep $1 fniz` # принтираме output-a на командата
exit # командната процедура приключва
echo OK # не се изпълнява
